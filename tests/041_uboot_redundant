#
# Read ID from a redundant U-boot environment block
#
# This test is set up so that the first environment has old data and should be
# skipped. The good serial number is in the second block.
#

# This u-boot environment block was created by running:
#
# printf "tmp.img 0 0x400\ntmp.img 0x400 0x400\n" > fw_env.tmp.config
# printf "var1=This is a string\nvar2=2\nserial_number=wrong" | mkenvimage -r -s "1024" - >env.img
# cat env.img env.img > tmp.img
# fw_setenv -c fw_env.tmp.config serial_number 0123456789
# base64 tmp.img
# rm tmp.img env.img fw_env.tmp.config

base64_decode >$WORK/dev/mmcblk0 <<EOF
kyXkNgF2YXIxPVRoaXMgaXMgYSBzdHJpbmcAdmFyMj0yAHNlcmlhbF9udW1iZXI9d3JvbmcAAP//
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////zRy
cdgCdmFyMT1UaGlzIGlzIGEgc3RyaW5nAHZhcjI9MgBzZXJpYWxfbnVtYmVyPTAxMjM0NTY3ODkA
AP//////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////8=
EOF

cat >$WORK/etc/fw_env.config <<EOF
# Test file
/dev/mmcblk0 0x0             0x400
/dev/mmcblk0    0x400          0x400
EOF

CMDLINE="-b uboot_env -u serial_number -k 0"

cat >$EXPECTED <<EOF
0123456789
EOF
